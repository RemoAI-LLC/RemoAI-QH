{
  "name": "remo-ai-chat",
  "version": "1.0.0",
  "description": "Remo AI - Privacy-First Personal AI Assistant with NPU Acceleration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "install-deps": "node install.js",
    "test": "node test-app.js"
  },
  "keywords": [
    "ai",
    "chatbot",
    "npu",
    "snapdragon",
    "privacy",
    "electron"
  ],
  "author": "RemoAI Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.remoai.chat",
    "productName": "Remo AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
